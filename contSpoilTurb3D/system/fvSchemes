FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
//This should be Euler?
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)	    Gauss linear;
    grad(U)         cellLimited Gauss linear 1;
}

//This is divSchemes in tutorial. Need to change from epsilon model. Also just hope that phi works out?
